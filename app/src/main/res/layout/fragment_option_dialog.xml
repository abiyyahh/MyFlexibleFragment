<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.myflexiblefragment.OptionDialogFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="yang mana yang bukan identitasmu?" />

    <RadioGroup
        android:id="@+id/rg_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_awr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="Abiyyah Putri Rahman" />

        <RadioButton
            android:id="@+id/rb_unai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="2110512070" />

        <RadioButton
            android:id="@+id/rb_geor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="S1 Sistem Informasi 2021" />

        <RadioButton
        android:id="@+id/rb_arteta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Laki-Laki"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
            </RadioGroup>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
    android:id="@+id/btn_close"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:text="Tutup"
    android:layout_marginRight="4dp"/>

    <Button
    android:id="@+id/btn_choose"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:text="Pilih"
    android:layout_marginLeft="4dp"/>
    </LinearLayout>
</LinearLayout>
